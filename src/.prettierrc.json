{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "embeddedLanguageFormatting": "auto",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "printWidth": 120,
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "importOrder": [
    "^@angular/(.*)$",
    "^rxjs",
    "^@ngxs",
    "^primeng",
    "^@core",
    "^@modules",
    "^[./]"
  ],
  "importOrderSeparation": true
}
